<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/switch_dialog_title_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_player_one"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/switch_dialog_title_suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_dialog_next_player"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/switch_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_dialog_ready"/>

</LinearLayout>
